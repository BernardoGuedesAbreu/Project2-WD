<div id="filterBody">

<form action="/dogs/filter/results" method="post" class="form-container">
  <div class="form-group">
    <label>Temperament:</label>
    <div>
      {{#each temperaments}}
        <div class="form-check form-check-inline">
          <input type="checkbox" name="temperament" id="{{this}}" value="{{this}}" class="form-check-input">
          <label class="form-check-label" for="{{this}}">{{this}}</label>
        </div>
      {{/each}}
    </div>
  </div>
<div id="filterInput">
  <div class="form-group">
    <label for="minWeight">Minimum Weight:</label>
    <input type="number" name="minWeight" id="minWeight" class="form-control">
  </div>

  <div class="form-group">
    <label for="maxWeight">Maximum Weight:</label>
    <input type="number" name="maxWeight" id="maxWeight" class="form-control">
  </div>

  <div class="form-group">
    <label for="minHeight">Minimum Height:</label>
    <input type="number" name="minHeight" id="minHeight" class="form-control">
  </div>

  <div class="form-group">
    <label for="maxHeight">Maximum Height:</label>
    <input type="number" name="maxHeight" id="maxHeight" class="form-control">
  </div>

  
  </div>
  <button type="submit" class="btn btn-primary">Find the perfect breed for you!</button>
</form>
</div>
